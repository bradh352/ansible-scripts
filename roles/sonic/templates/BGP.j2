{
{% if not sonic_bgp_external|default(true) %}
    "BGP_GLOBALS": {
        "default": {
            "local_asn": "{{ sonic_asn }}",
            "log_nbr_state_changes": "true",
            "router_id": "{{ sonic_bgp_ip|split('/')|first }}",
            "load_balance_mp_relax": "true"
        }
    },
    "BGP_GLOBALS_AF": {
        "default|ipv4_unicast": {
            "max_ebgp_paths": "2"
        },
        "default|ipv6_unicast": {
            "max_ebgp_paths": "2"
        },
        "default|l2vpn_evpn": {
            "advertise-all-vni": "true",
            "advertise-svi-ip": "true"
        }
    },
    "BGP_PEER_GROUP": {
        "default|PEERS": {
{%   if sonic_bgp_peers|default([])|count == 0 %}
            "peer_type": "external",
{%   endif %}
            "ebgp_multihop": "true",
            "keepalive": "3",
            "holdtime": "9",
            "min_adv_interval": "5",
            "capability_ext_nexthop": "true",
            "bfd": "true"
        }
    },
    "BGP_PEER_GROUP_AF": {
        "default|PEERS|ipv4_unicast": {
            "admin_status": "up",
            "route_map_in": [ "ALLOW" ],
            "route_map_out": [ "ALLOW" ]
        },
        "default|PEERS|ipv6_unicast": {
            "admin_status": "up",
            "route_map_in": [ "ALLOW" ],
            "route_map_out": [ "ALLOW" ]
        },
        "default|PEERS|l2vpn_evpn": {
            "admin_status": "up",
            "route_map_in": [ "ALLOW" ],
            "route_map_out": [ "ALLOW" ],
            "unchanged_nexthop": "true"
        }
    },

    "BGP_NEIGHBOR": {
{# ======== BGP Unnumbered ========= #}
{%   if sonic_bgp_peers|default([])|count == 0 %}
{%     set ns = namespace(has_neighbor=false) %}
{%     for port in ports %}
{%       if sonic_interfaces[port.index].layer3|default(false) %}
{%-         if ns.has_neighbor %}
        ,
{%          endif %}
{%          set ns.has_neighbor=true %}
        "default|{{ port.port }}": {
            "peer_group_name": "PEERS"
        }
{%       endif %}
{%     endfor %}
{%   else %}
{# ======== Manually specified BGP peers ====== #}
{%     for bgpneigh in sonic_bgp_peers %}
{%-      if not loop.first %}
          ,
{%       endif %}
        "default|{{ bgpneigh.ip }}": {
            "asn": "{{ bgpneigh.asn }}",
            "peer_group_name": "PEERS",
            "local_addr": "{{ bgpneigh.src_ip|split('/')|first }}",
            "name": "{{ bgpneigh.name }}"
        }
{%     endfor %}
{%-    for bgpneigh in sonic_vtep_peers %}
        ,
        "default|{{ bgpneigh.ip }}": {
            "asn": "{{ bgpneigh.asn }}",
            "peer_group_name": "PEERS",
            "local_addr": "{{ sonic_vtep_src|split('/')|first }}",
            "name": "{{ bgpneigh.name }}"
        }
{%     endfor %}
{%   endif %}
    },
    "ROUTE_MAP_SET": {
        "name": "ALLOW"
    },
    "ROUTE_MAP": {
        "ALLOW|1": {
            "route_operation": "permit"
        }
    },
    "ROUTE_REDISTRIBUTE": {
        "default|connected|bgp|ipv4": {},
        "default|connected|bgp|ipv6": {}
    }
{% endif %}
}
